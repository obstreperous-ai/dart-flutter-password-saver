{
  "name": "Flutter Password Saver",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "vscode",
      "userUid": "automatic",
      "userGid": "automatic"
    },
    "ghcr.io/devcontainers-contrib/features/flutter-asdf:2": {
      "version": "stable",
      "channel": "stable"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter"
      ],
      "settings": {
        "dart.lineLength": 80,
        "editor.formatOnSave": true,
        "editor.rulers": [80],
        "[dart]": {
          "editor.formatOnSave": true,
          "editor.formatOnType": true,
          "editor.selectionHighlight": false,
          "editor.suggest.snippetsPreventQuickSuggestions": false,
          "editor.suggestSelection": "first",
          "editor.tabCompletion": "onlySnippets",
          "editor.wordBasedSuggestions": "off"
        }
      }
    }
  },
  
  "postCreateCommand": "bash -c 'set -e && sudo apt-get update && sudo apt-get install -y clang cmake ninja-build pkg-config libgtk-3-dev liblzma-dev libstdc++-12-dev libsecret-1-dev && flutter config --enable-linux-desktop && flutter pub get && flutter doctor && dart analyze'",
  
  "remoteUser": "vscode",
  
  "containerEnv": {
    "FLUTTER_ROOT": "/home/vscode/.asdf/installs/flutter/stable",
    "PUB_CACHE": "/home/vscode/.pub-cache"
  }
}
